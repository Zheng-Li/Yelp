<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dp" >
        
 		<ImageView
 	    android:id="@+id/business_image_1"
 	    android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/ic_launcher"
        android:contentDescription="Business Logo"
        />
 		
       	<LinearLayout
            android:id="@+id/business_info_1" 
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_toRightOf="@id/business_image_1"
            android:layout_marginRight="70dp"
            android:orientation="vertical" >
                	
        	<TextView
        	android:id="@+id/business_name_1"
           	android:gravity="bottom"
        	android:layout_width="fill_parent"
        	android:layout_height="20sp" />
    	
    		<TextView
        	android:id="@+id/business_address_1"
        	android:gravity="bottom"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent" />
        </LinearLayout>

       	<ImageView
       	    android:id="@+id/business_rating_1"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignParentRight="true"
       	    android:layout_alignParentTop="true"
       	    android:contentDescription="Yelp ratings"
       	    android:src="@drawable/ic_launcher" />
       	
       	<TextView
       	    android:id="@+id/business_distance_1"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignParentBottom="true"
       	    android:layout_alignParentRight="true" 
       	    android:text="1.9 miles"/>
        	
</RelativeLayout>
